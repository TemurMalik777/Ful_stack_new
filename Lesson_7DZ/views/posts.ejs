<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/nav.ejs") %>
        <h1>Maqolalar</h1>
        <ol>
            <% posts.forEach((post) => { %>
            <li>
                <a href="/post/<%= post.id %>">
                    <%= post.title %> - <%= post.body %>
                </a>
            </li>
            <% }) %>
        </ol>
        <h3><a href="/add-post">Add new post</a></h3>
    </body>
</html>
